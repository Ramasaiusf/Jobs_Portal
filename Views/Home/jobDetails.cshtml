<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Add your head content here -->
</head>
<body>
    <h1>Job Details</h1>
    <div id="jobDetailsContainer">
        <!-- Display job details here using JavaScript -->
    </div>
    <script>
        // Retrieve the job ID from the query parameter
        const urlParams = new URLSearchParams(window.location.search);
        const jobID = urlParams.get('jobID');

        // Fetch the job details for the specific job ID and display them in the container
        fetch(`https://data.cityofnewyork.us/resource/kpav-sd4t.json?job_id=${jobID}`)
            .then(response => response.json())
            .then(jobDetails => {
                // Create HTML elements to display the job details
                const jobDetailsContainer = document.getElementById('jobDetailsContainer');
                const jobDetailTable = document.createElement('table');
                // Add code to populate the table with job details using jobDetails object
                // For example: jobDetailTable.innerHTML = `<tr><td>Job Title:</td><td>${jobDetails.title}</td></tr>`;
                jobDetailsContainer.appendChild(jobDetailTable);
            })
            .catch(error => {
                console.error('Error fetching job details:', error);
            });
    </script>
</body>
</html>
