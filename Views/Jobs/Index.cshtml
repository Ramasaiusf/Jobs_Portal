@model IEnumerable<Jobs_Portal.Models.Job>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/jobs/index.css">
    <title>Home</title>
</head>
<body>
    <p>
        <a asp-action="Create" class="btn">Create New</a>
    </p>
    <div class=" table-container">

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PostingType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Agency)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfPositions)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LevelID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResidencyRequirement)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RecruitmentContact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalaryFrequency)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalaryRangeFrom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalaryRangeTo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullTimePartTimeIndicator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TitleCodeNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TitleCodeNo1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkLocationAgency)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DivisionWorkUnit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MinimumQualRequirements)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JobDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PreferredSkills)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ToApply)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HoursShift)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostUntil)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostingUpdated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProcessDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkLocation1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdditionalInformation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Level)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostingType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Agency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfPositions)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LevelID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResidencyRequirement)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecruitmentContact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalaryFrequency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalaryRangeFrom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalaryRangeTo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullTimePartTimeIndicator)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TitleCodeNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TitleCodeNo1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkLocationAgency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DivisionWorkUnit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinimumQualRequirements)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PreferredSkills)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ToApply)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoursShift)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostUntil)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostingUpdated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProcessDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkLocation1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdditionalInformation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Level)
                        </td>
                        <td class="actions">
                            <a asp-action="Edit" class="btn btn-primary" id="action-button" asp-route-id="@item.JobID">Edit</a>
                            <a asp-action="Details" class="btn btn-info" id="action-button" asp-route-id="@item.JobID">Details</a>
                            <a asp-action="Delete" class="btn btn-danger" id="action-button" asp-route-id="@item.JobID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>


</body>

